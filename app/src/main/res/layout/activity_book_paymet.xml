<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Payment Information"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Large Image - Half of page -->
        <ImageView
            android:id="@+id/paymentImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/img_payment"
            android:contentDescription="Payment illustration"
            android:scaleType="centerCrop"
             />

        <!-- Minimum Advance Required -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Minimum advance required"
                android:textColor="#666666"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/minimumAdvanceInput"
                android:layout_width="150dp"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:padding="8dp"
                android:text="2500.00"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Pickup Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Pickup Date"
                android:textColor="#666666"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/pickupDateInput"
                android:layout_width="150dp"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="date"
                android:padding="8dp"
                android:text="22/9/2025"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Days -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Days"
                android:textColor="#666666"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/daysInput"
                android:layout_width="150dp"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:padding="8dp"
                android:text="3"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Full Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Full Amount"
                android:textColor="#666666"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/fullAmountInput"
                android:layout_width="150dp"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:padding="8dp"
                android:text="11,000.00"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Type"
                android:textColor="#666666"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/paymentTypeGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/cardRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:checked="true"
                    android:text="Card"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/cashRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash"
                    android:textSize="16sp" />
            </RadioGroup>
        </LinearLayout>

        <!-- Process Button -->
        <Button
            android:id="@+id/btnProcess"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#2196F3"
            android:paddingVertical="12dp"
            android:text="Process"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#9E9E9E"
            android:paddingVertical="10dp"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>