<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboard3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="400dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/order" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="200dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flexible Rentals And GPS Pickup"
            android:textColor="#187ED1"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="580dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="“Pick up vehicles near you or request delivery for convenience.”"
            android:textColor="#1572B8"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="650dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn1onScreen3"
            android:layout_width="38dp"
            android:layout_height="46dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="34dp"
            android:backgroundTint="@android:color/transparent"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            app:strokeColor="#168AED"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/btn2onScreen3"
            android:layout_width="38dp"
            android:layout_height="46dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="34dp"
            android:backgroundTint="@android:color/transparent"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            app:strokeColor="#168AED"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/btn3onScreen3"
            android:layout_width="38dp"
            android:layout_height="46dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="34dp"
            android:backgroundTint="#168AED"
            android:paddingLeft="1dp"
            android:paddingRight="1dp" />

        <Button
            android:id="@+id/btnSKOnscreen3"
            android:layout_width="80dp"
            android:layout_height="46dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="34dp"
            android:backgroundTint="#168AED"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:text="GetStart" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>